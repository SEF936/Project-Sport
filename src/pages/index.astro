// Helper to extract YouTube video ID and generate thumbnail
function getYouTubeThumbnail(videoUrl: string): string | null {
  if (!videoUrl) return null;
  
  let videoId = '';
  
  const watchMatch = videoUrl.match(/v=([a-zA-Z0-9_-]{11})/);
  if (watchMatch) videoId = watchMatch[1];
  
  const shortMatch = videoUrl.match(/youtu\.be\/([a-zA-Z0-9_-]{11})/);
  if (shortMatch) videoId = shortMatch[1];
  
  const shortsMatch = videoUrl.match(/shorts\/([a-zA-Z0-9_-]{11})/);
  if (shortsMatch) videoId = shortsMatch[1];
  
  const embedMatch = videoUrl.match(/embed\/([a-zA-Z0-9_-]{11})/);
  if (embedMatch) videoId = embedMatch[1];
  
  if (!videoId && videoUrl.length === 11 && /^[a-zA-Z0-9_-]+$/.test(videoUrl)) {
    videoId = videoUrl;
  }
  
  return videoId ? `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg` : null;
}

const allBlogPosts = await getCollection('blog');
const publishedPosts = allBlogPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);
