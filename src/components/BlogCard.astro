---
export interface Props {
  title: string;
  description: string;
  image: string;
  slug: string;
  tags?: string[];
}

const { title, description, image, slug, tags = [] } = Astro.props as Props;
---

<article class="bg-slate-800 rounded-lg overflow-hidden hover:shadow-lg hover:shadow-orange-500/20 transition duration-300">
  <a href={`/blog/${slug}`} class="block">
    <img src={image} alt={title} class="w-full h-48 object-cover hover:scale-105 transition duration-300" loading="lazy" />
  </a>
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2 line-clamp-2">
      <a href={`/blog/${slug}`} class="hover:text-orange-400 transition">
        {title}
      </a>
    </h3>
    <p class="text-slate-300 text-sm mb-4 line-clamp-2">{description}</p>
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map(tag => (
          <a href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`} class="text-xs bg-orange-500/20 text-orange-300 px-2 py-1 rounded hover:bg-orange-500/40 transition">
            #{tag}
          </a>
        ))}
      </div>
    )}
  </div>
</article>